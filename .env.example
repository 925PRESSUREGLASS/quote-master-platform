# Quote Master Pro - Environment Configuration Example
# Copy this file to .env and update with your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
APP_NAME="Quote Master Pro"
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production-please
HOST=0.0.0.0
PORT=8000
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# =============================================================================
# AI SERVICE API KEYS (REQUIRED)
# =============================================================================
# OpenAI API Key (Required for GPT models)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (Required for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Azure OpenAI (Optional)
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (Default for development)
DATABASE_URL=sqlite:///./quote_master_pro.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/quote_master_pro
# DB_PASSWORD=your-secure-database-password

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
# Redis URL for caching and session storage
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
ENABLE_CACHING=True

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256
BCRYPT_ROUNDS=12

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# Email service for notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM="Quote Master Pro <noreply@quotemasterpro.com>"
EMAIL_USE_TLS=True

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
# Default AI model settings
DEFAULT_AI_MODEL=gpt-4
DEFAULT_MAX_TOKENS=150
DEFAULT_TEMPERATURE=0.7
AI_REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Circuit breaker settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30
CIRCUIT_BREAKER_EXPECTED_EXCEPTION=AIServiceError

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# OpenTelemetry configuration
OTEL_SERVICE_NAME=quote-master-pro
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_RESOURCE_ATTRIBUTES=service.name=quote-master-pro,service.version=1.0.0

# Sentry (Optional - for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=1.0

# Prometheus metrics
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# Local file storage (default)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10

# AWS S3 (Optional)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=quote-master-files
# AWS_REGION=us-west-2

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Rate limits per user/IP
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Database migrations
ALEMBIC_DATABASE_URL=sqlite:///./quote_master_pro.db

# Testing
TEST_DATABASE_URL=sqlite:///./test_quote_master_pro.db

# Debug features
ENABLE_DEBUG_ROUTES=True
ENABLE_PROFILING=False

# =============================================================================
# PRODUCTION OVERRIDES (Set these in production)
# =============================================================================
# Make sure to override these for production:
# ENVIRONMENT=production
# DEBUG=False
# SECRET_KEY=generate-a-strong-secret-key-256-bits
# DATABASE_URL=postgresql://user:secure_password@db_host:5432/quote_master_pro
# ALLOWED_ORIGINS=["https://yourdomain.com"]
# SENTRY_DSN=your-real-sentry-dsn
