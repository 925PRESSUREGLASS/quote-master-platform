# Quote Master Pro Environment Configuration
# Copy this to .env and update with your actual values

# Application
APP_NAME="Quote Master Pro"
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True

# Database
DATABASE_URL=sqlite:///./quote_master_pro.db
# For PostgreSQL use: postgresql://postgres:password@localhost:5432/quote_master_pro

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Services
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=mp3,wav,m4a,flac,webm

# Voice Processing
WHISPER_MODEL=base
WHISPER_DEVICE=cpu

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
